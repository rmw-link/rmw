_DIR=$(dirname $(realpath $0))
_ROOT=$_DIR/../..


filepath=$(realpath $1)
name=$(basename $1 .coffee)

jsdir=$(node -e "path=require('path');console.log(path.dirname(process.argv[1].replace('/src/','/lib/')))" -- $filepath)

cd $jsdir
deno run -A --unstable "$name.js" 

